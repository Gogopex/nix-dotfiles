theme = GruvboxDark
font-family = "TX-02-Regular"
window-title-font-family = "TX-02"
font-size = 16
shell-integration = fish 
confirm-close-surface = false 
macos-titlebar-style = tabs 
window-save-state = always

# keybinds
# Explicitly pass Ctrl+hjkl to Zellij
keybind = ctrl+h=ignore
keybind = ctrl+j=ignore
keybind = ctrl+k=ignore  
keybind = ctrl+l=ignore

# Unbind tab navigation to let Zellij handle it (but keep cmd+c/v for copy/paste)
keybind = cmd+h=unbind
keybind = cmd+l=unbind
keybind = cmd+t=unbind
keybind = cmd+w=unbind

# Unbind pane resizing to let Zellij handle it
keybind = super+ctrl+h=unbind
keybind = super+ctrl+j=unbind
keybind = super+ctrl+k=unbind
keybind = super+ctrl+l=unbind

# Ensure copy/paste works
keybind = cmd+c=copy_to_clipboard
keybind = cmd+v=paste_from_clipboard

# Ghostty window/tab management (using cmd+shift since cmd alone goes to zellij)
keybind = cmd+shift+h=previous_tab
keybind = cmd+shift+l=next_tab
keybind = cmd+shift+t=new_tab
keybind = cmd+shift+w=close_surface
keybind = cmd+q=quit


auto-update = off

keybind = global:shift+opt+t=toggle_quick_terminal
keybind = shift+enter=text:\n
